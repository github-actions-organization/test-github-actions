{
  "overrides": [
    {
      "files": [
        "**/*.test.ts",
        "**/*.test.tsx"
      ],
      "parser": "@typescript-eslint/parser",
      "plugins": [
        "prettier",
        "import",
        "unicorn",
        "@typescript-eslint"
      ],
      "parserOptions": {
        "project": "./tsconfig.json",
        "sourceType": "module"
      },
      "extends": [
        "@sanv/eslint-config-base",
        "@sanv/eslint-config-tests",
        "@sanv/eslint-config-tests-typescript",
        "@sanv/eslint-config-unicorn",
        "@sanv/eslint-config-unicorn-typescript",
        "@sanv/eslint-config-import",
        "@sanv/eslint-config-import-typescript",
        "plugin:prettier/recommended",
        "prettier/@typescript-eslint"
      ],
      "rules": {
        "jest/no-try-expect": "off",
        "no-underscore-dangle": "off",
        "no-magic-numbers": "off",
        "@typescript-eslint/no-magic-numbers": "off"
      }
    },
    {
      "files": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
      ],
      "parser": "@typescript-eslint/parser",
      "plugins": [
        "prettier",
        "import",
        "unicorn",
        "@typescript-eslint"
      ],
      "parserOptions": {
        "project": "./tsconfig.json",
        "sourceType": "module"
      },
      "extends": [
        "@sanv/eslint-config-base",
        "@sanv/eslint-config-unicorn",
        "@sanv/eslint-config-unicorn-typescript",
        "@sanv/eslint-config-import",
        "@sanv/eslint-config-import-typescript",
        "plugin:prettier/recommended",
        "prettier/@typescript-eslint"
      ],
      "rules": {
        "no-underscore-dangle": "off",
        "no-magic-numbers": "off",
        "@typescript-eslint/no-magic-numbers": "off"
      }
    }
  ]
}
